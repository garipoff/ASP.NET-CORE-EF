@page
@model post.Pages.Posts.EditModel

@{
    ViewData["Title"] = "Edit";
}

<h1>Edit</h1>

<h4>Post</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Post.PostID" />
            <div class="form-group">
                <label asp-for="Post.UserID" class="control-label"></label>
                <select asp-for="Post.UserID" class="form-control" asp-items="ViewBag.UserID"></select>
                <span asp-validation-for="Post.UserID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.CategoryID" class="control-label"></label>
                <select asp-for="Post.CategoryID" class="form-control" asp-items="ViewBag.CategoryID"></select>
                <span asp-validation-for="Post.CategoryID" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Post.PostContent" class="control-label"></label>
                @Html.TextAreaFor(model => model.Post.PostContent, 10, 60, new { htmlAttributes = new { @class="form-control"} })
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
